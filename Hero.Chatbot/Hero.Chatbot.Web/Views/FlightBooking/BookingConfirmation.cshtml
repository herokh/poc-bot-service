@using Microsoft.AspNetCore.Http
@using Hero.Chatbot.Web.Extensions
@using Hero.Chatbot.Web.Constants

@{
    ViewData["Title"] = "Flight Booking Page";
}

@{
    var state = Context.Session.Get<FlightBookingStateViewModel>(SessionKeyConsts.FlightBookingState);
}

<div>
    <h4 class="mb-4">Are you sure?</h4>
    <div class="d-flex flex-column mb-2">
        <span>First name</span>
        <span>@state.Passenger.FirstName</span>
    </div>
    <div class="d-flex flex-column mb-2">
        <span>Last name</span>
        <span>@state.Passenger.LastName</span>
    </div>
    <div class="d-flex flex-column mb-2">
        <span>Departure Time</span>
        <span>@state.FormattedDepartureDateTime</span>
    </div>
    <div class="d-flex flex-column mb-2">
        <span>Arrival Time</span>
        <span>@state.FormattedArrivalDateTime</span>
    </div>
    <div class="d-flex flex-column mb-2">
        <span>Total Amount</span>
        <span>@state.TotalAmount</span>
    </div>
    <div class="d-flex flex-column mb-2">
        <span>Payment Method</span>
        <span>Credit card</span>
    </div>
    <a asp-controller="FlightBooking" asp-action="ThankYou" class="btn btn-outline-primary">Yes</a>
</div>
